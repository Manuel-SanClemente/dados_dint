<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="20dp"
    >

    <LinearLayout
        android:id="@+id/dices_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dice_selection_title"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dices_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dices_title"
        app:layout_constraintBottom_toTopOf="@+id/dices_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/d4_card"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/d4_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d4"
                    android:padding="10dp"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/d6_card"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="15dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/d6_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d6"
                    android:padding="10dp"
                    />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/d8_card"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/d8_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d8"
                    android:padding="10dp"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/d10_card"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="15dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/d10_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d10"
                    android:padding="10dp"
                    />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/d12_card"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/d12_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d12"
                    android:padding="10dp"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/d20_card"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="15dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/d20_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d20"
                    android:padding="10dp"
                    />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/d100_card"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/d100_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/d100"
                android:padding="10dp"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <Button
        android:id="@+id/dices_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Siguiente"
        />



</androidx.constraintlayout.widget.ConstraintLayout>